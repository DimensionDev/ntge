<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NtgeApp.App">
    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml" />
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml" />
        <StyleInclude Source="avares://NtgeApp/Resources/Icons.xaml" />
        <Style Selector="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="Button.PrimaryButton">
            <Setter Property="Background" Value="{DynamicResource PrimaryColorBrush}" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.Transparent">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Application.Styles>
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryColorBrush" Color="{DynamicResource PrimaryColor}" />
        <Color x:Key="PrimaryColor">#2B579A</Color>
    </Application.Resources>
</Application>