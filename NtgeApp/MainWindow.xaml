    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>
    <Grid>
        <TabControl Items="{Binding Tabs}" TabStripPlacement="Left">
            <TabControl.ContentTemplate>
                <DataTemplate DataType="models:TabItemModel">
                    <ContentPresenter Content="{Binding Content}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
            <TabControl.ItemTemplate>
                <DataTemplate DataType="models:TabItemModel">
                    <StackPanel Orientation="Horizontal">
                        <Image Height="24" Width="24">
                            <Image.Source>
                                <DrawingImage Drawing="{Binding Icon}" />
                            </Image.Source>
                        </Image>
                        <TextBlock VerticalAlignment="Center" Margin="8,0,0,0" Text="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </Grid>
